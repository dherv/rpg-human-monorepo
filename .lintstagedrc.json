{
  "*.{js,jsx,ts,tsx}": [
    "eslint --max-warnings=0",
    "yarn test --bail --watchAll=false --passWithNoTests"
  ],
  "src/**/*.{ts, tsx}": "tsc-files --noEmit --project tsconfig.json",
  "cypress/**/*.{ts, tsx}": "tsc-files --noEmit --project cypress/tsconfig.json",
  "*.{js,jsx,ts,tsx,json,css,js}": ["prettier --write"]
}
